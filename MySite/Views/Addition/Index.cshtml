@model Addition
@{
    ViewBag.Title = "Addition Page";
}
<h1>Addition Page</h1>
<form method="post" asp-action="Index">
    <div>
        <label class="form-label" asp-for="NumberOne">Number One</label>
        <input asp-for="NumberOne" class="form-control" />
    </div>
    <div>
        <label class="form-label" asp-for="NumberTwo">Number Two</label>
        <input asp-for="NumberTwo" class="form-control" />
    </div>
    <div>
        <label class="form-label" asp-for="Sum">Sum</label>
        <input asp-for="Sum" class="form-control" readonly value="@Model.Sum" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>
